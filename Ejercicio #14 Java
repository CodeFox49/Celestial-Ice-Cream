public class Person {
  private String name; //Declaración de variable privada

  //Getter
  public String getName() {
    return name;
  }

  //Setter
  public void setName(String newName) {
    this.name = newName;
  }
}

//Método Main
public class Main {
  public static void main(String[] args) {
    Person myObj = new Person();
    myObj.setName("John"); //Se fija el nombre "John"
    System.out.println(myObj.getName()); //Se imprime el código
  }
}
